{
  "name": "@piondev/shared-configs",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/vcat-dev/shared-configs"
  },
  "exports": {
    "./biome": "./biome.jsonc",
    "./eslint": "./eslint.shared.mjs",
    "./prettier": "./prettier.config.mjs"
  },
  "scripts": {
    "lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:biome",
    "lint:eslint": "eslint . --fix --ignore-pattern 'tests/**/*-invalid.ts'",
    "lint:prettier": "prettier '**/*.{ts,tsx,js,jsx,json,md,cjs,mjs,yml,yaml}' --write",
    "lint:biome": "yarn biome check --write",
    "test": "eslint tests"
  },
  "dependencies": {
    "@biomejs/biome": "^1.8.3",
    "@eslint/js": ">= 9.0.0",
    "eslint": ">= 9.0.0",
    "prettier": ">= 3.0.0",
    "typescript": "^5.5.4",
    "typescript-eslint": ">= 8.0.0"
  },
  "peerDependencies": {
    "@biomejs/biome": ">= 1.8.3",
    "@eslint/js": ">= 9.0.0",
    "eslint": ">= 9.0.0",
    "prettier": ">= 3.0.0",
    "typescript-eslint": ">= 8.0.0"
  }
}
